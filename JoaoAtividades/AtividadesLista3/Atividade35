algoritmo "semnome"
var
   carro: inteiro
   valorAluguel, dias: real
inicio
      escreval ("-------------------------------------------")
      escreval ("Está pensando em alugar u carro? Então vamos lá!")
      escreval ("Qual tipo de carro você quer?")
      escreval ("[1] para carro popular")
      escreval ("[2] para carro de luxo")
      leia (carro)
      escreval ("Por quantos dias você quer o carro?")
      leia (dias)
      escreval ("A empresa cobra o valor do carro e uma taxa com base nos km percorridos.")
      escolha carro
              caso 1
                   valorAluguel <- 90
                   escreval ("")
              caso 2
                   valorAluguel <- 150
      fimescolha
fimalgoritmo