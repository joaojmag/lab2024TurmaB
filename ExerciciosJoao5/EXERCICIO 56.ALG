Algoritmo "Exercicio 56"

Var
   num,soma:real
   cont:inteiro

Inicio
   soma<-0
   cont<-1
   escreval("ESCREVA '1111' PARA SAIR")
   enquanto (cont<>1111) faca
      escreva("DIGITE UM NUMERO:")
      leia(cont)
      soma<-soma+cont
   fimenquanto
      escreva("A soma dos numeros é:",soma)
Fimalgoritmo