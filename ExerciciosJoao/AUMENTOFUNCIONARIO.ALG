algoritmo "AumentoFuncionario"
var
S,NS:real
inicio
      escreval("----------------------------------")
      escreval(       "Qual o seu salario R$:     ")
      escreval("----------------------------------")
      leia(S)
       NS<-S*(15/100)
      escreva("SEU NOVO SALARIO COM UM AUMENTO DE 15%:",S+NS)

fimalgoritmo